<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">


    <TextView
        android:id="@+id/cache_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:maxLines="2"
        android:paddingRight="16dp"
        android:textColor="@color/gray_dark"
        android:textSize="20sp"
        android:transitionName="cache_title"
        android:typeface="sans"
        tools:text="Cache Name" />

    <TextView
        android:id="@+id/cache_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cache_name"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:transitionName="cache_type"
        android:typeface="sans"
        tools:text="Traditional" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/cache_terrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cache_type"
        android:layout_marginLeft="16dp"
        android:textSize="15sp"
        android:typeface="sans"
        tools:text="Terrain: 2.0" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/cache_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cache_terrain"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/cache_terrain"
        android:layout_toRightOf="@+id/cache_terrain"
        android:textSize="15sp"
        android:typeface="sans"
        tools:text="Difficulty: 2.5" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/cache_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cache_difficulty"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/cache_difficulty"
        android:layout_toRightOf="@+id/cache_difficulty"
        android:fontFeatureSettings="smcp"
        android:textSize="15sp"
        android:typeface="sans"
        tools:text="Size: Micro" />

    <TextView
        android:id="@+id/cache_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cache_name"
        android:layout_marginRight="16dp"
        android:textSize="15sp"
        android:typeface="sans"
        tools:text="150ft" />


</RelativeLayout>
